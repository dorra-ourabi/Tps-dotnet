@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Question 5 - Films avec leurs Genres (JOIN)";
}

<div class="container mt-4">
    <h2>Liste des Films avec leur Genre</h2>
    <hr />

    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Titre du Film</th>
            <th>Nom du Genre</th>
            <th>Stock</th>
            <th>Date d'Ajout</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td><strong>@item.MovieTitle</strong></td>
                    <td><span class="badge bg-primary">@item.GenreName</span></td>
                    <td>@item.Stock</td>
                    <td>@(item.DateAdded != null ? ((DateTime)item.DateAdded).ToString("dd/MM/yyyy") : "N/A")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">Aucun film trouvé</td>
            </tr>
        }
        </tbody>
    </table>



    <div class="mt-3">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Retour à l'accueil</a>
        
    </div>
</div>
