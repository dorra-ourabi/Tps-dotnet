@model IEnumerable<tp4.Models.Movies>

@{
    ViewData["Title"] = "Question 2 - Films Ordonnés";
}

<div class="container mt-4">
    <h2>Films ordonnés par Date de Sortie puis par Titre Alphabétique</h2>
    <hr />

    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nom du Film</th>
            <th>Genre</th>
            <th>Stock</th>
            <th>Date d'ajout</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@movie.Name</td>
                    <td>@movie.Genre.GenreName</td>
                    <td><span class="badge bg-info">@movie.Stock</span></td>
                    <td>@movie.DateAjoutMovie?.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Aucun film trouvé</td>
            </tr>
        }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Retour à l'accueil</a>
    </div>
</div>
