@model IEnumerable<tp4.Models.Customers>

@{
    ViewData["Title"] = "Question 4 - Clients Abonnés avec Remise > 10%";
}

<div class="container mt-4">
    <h2>Clients Abonnés à la Newsletter avec Remise > 10%</h2>
    <hr />

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nom du Client</th>
                <th>Abonné Newsletter</th>
                <th>Type de Membership</th>
                <th>Taux de Remise</th>
                <th>Durée (mois)</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.Id</td>
                        <td>@customer.Name</td>
                        <td>
                            @if (customer.IsSubscribed)
                            {
                                <span class="badge bg-success">✓ Oui</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">✗ Non</span>
                            }
                        </td>
                        <td>Membership #@customer.membershiptypes.Id</td>
                        <td><span class="badge bg-warning text-dark">@customer.membershiptypes.DiscountRate%</span></td>
                        <td>@customer.membershiptypes.DurationInMonth mois</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">Aucun client abonné avec remise > 10%</td>
                </tr>
            }
        </tbody>
    </table>
    

    <div class="mt-3">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Retour à l'accueil</a>
    
    </div>
</div>
